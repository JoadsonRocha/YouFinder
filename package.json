{
  "name": "youfinder",
  "version": "3.0.0",
  "description": "YouFinder - Reprodutor YouTube Clean",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --win"
  },
  "build": {
    "appId": "com.youfinder.app",
    "productName": "YouFinder_3.0",
    "copyright": "Copyright Â© 2025 Joadson Rocha",
    "win": {
      "icon": "YouFinder.ico",
      "target": [
        "nsis",
        "portable",
        "msi"
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "YouFinder"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "style.css",
      "settings.json",
      "YouFinder.ico"
    ]
  },
  "keywords": [
    "youtube",
    "clean",
    "finder",
    "electron"
  ],
  "author": "Joadson Rocha",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.1.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.34.0"
  }
}